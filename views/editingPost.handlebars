<div class="container">
    <h1>Edit Post</h1>
    <form action="/{{post._id}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input name="title" type="text" class="form-control" value="{{post.title}}" placeholder="Add Title">
        </div>
        <div class="form-group">
            <label for="body">Body</label>
            <textarea type="text" name="body" class="form-control" placeholder="Type something ...">{{post.body}}
            </textarea>
        </div>
        <div class="form-group">
            <label for="status">Status</label>
            <select name="status">
               
                <option value="public" selected>Public</option>
                <option value="private">Private</option>
               
                <option value="public" >Public</option>
                <option value="private" selected>Private</option>
                
            </select>
        </div>
        <div class="form-group form-check">
            <input type="checkbox" name="allowComments" class="form-check-input" id="checkbox">
            <label class="form-check-label" for="checkbox">Allow Comment</label>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>